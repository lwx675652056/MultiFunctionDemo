<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_titlebar"
    android:layout_width="match_parent"
    android:layout_height="49dp">
    <!--android:background="@drawable/primary_draw_background"-->

    <ImageView
        android:id="@+id/img_back_titlebar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:padding="15dp"
        android:src="@mipmap/left_arrow" />

    <ImageView
        android:id="@+id/img_close_titlebar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/img_back_titlebar"
        android:layout_toRightOf="@+id/img_back_titlebar"
        android:padding="10dp"
        android:src="@mipmap/public_titleview_close_web"
        android:visibility="gone" />

    <TextView
        android:id="@+id/text_name_titlebar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ellipsize="end"
        android:maxEms="10"
        android:singleLine="true"
        android:textColor="@color/colors_333333"
        android:textSize="18sp"
        android:visibility="visible"
        tools:text="标题" />

    <ImageView
        android:id="@+id/img_share_titlebar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:src="@mipmap/public_titleview_share_nomal"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/img_favorite_titlebar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/img_share_titlebar"
        android:layout_toStartOf="@id/img_share_titlebar"
        android:src="@mipmap/public_titleview_empt_star"
        android:visibility="gone" />


    <TextView
        android:id="@+id/text_right_titlebar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:visibility="gone"
        tools:text="智能匹配" />


    <View
        android:id="@+id/bot_divider_titlebar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#d7d7d7" />
</RelativeLayout>
