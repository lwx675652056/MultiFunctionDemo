<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lwx.multifunctiondemo.activity.GradientSeekbarActivity">

    <SeekBar
        android:id="@+id/seekbar_gradient_seekbar_activity"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="6dp"
        android:minHeight="6dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="21dp"
        android:layout_marginRight="21dp"
        android:thumb="@mipmap/icon_affirm_money_seekbar"
        android:progressDrawable="@drawable/shape_bg_adjust_seekbar"
        android:splitTrack="false" />
</android.support.constraint.ConstraintLayout>
