<resources>

    <!-- Base application theme. -->
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="MyAppTheme" parent="AppTheme">
        <!-- 关闭多点触控-->
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 去掉默认背景色-->
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="LaunchAppTheme" parent="Theme.AppCompat.NoActionBar">
        <!--<item name="android:windowBackground">@mipmap/icon_splash</item>-->
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="MainAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- 沉浸状态栏的设置 -->
    <style name="immersion_status" parent="layout_match">
        <item name="android:clipToPadding">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <!--对话框-->
    <style name="Theme_Dialog" parent="android:style/Theme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是悬浮还是覆盖 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 是否有系统自带标题栏 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景是否变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 去除黑色背景 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 设置全屏 -->
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="layout_match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="match_wrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrap_match">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="layout_wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
